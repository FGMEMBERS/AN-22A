<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList include="AN-22A-base.xml">
  
  <!-- generic autopilot settings changed HerbyW 10 Jan 2015-->

  <sim>

    <description>Antonov AN-22A (YASim)</description>
    <author>HerbyW (Instruments, Animations, FDM), BARANGER Emmanuel (orig 3D/FDM)</author>
    <flight-model>yasim</flight-model>
    <aero>AN-22A-yasim</aero>
    
    <weight n="0">
        	    <name>Crew</name>
        	    <weight-lb type="double">400</weight-lb>
        	    <max-lb type="double">800</max-lb>
        	    <min-lb type="double">300</min-lb>
    </weight>
    
    <weight n="1">
		    <name>Cargo</name>
		    <weight-lb type="double">90000.0</weight-lb>
		    <max-lb type="double">200170.0</max-lb>
		    <min-lb type="double">0.0</min-lb>
		</weight>
	

    <weight n="2">
		    <name>Parachuters a 120 lb</name>
		    <weight-lb type="double">0.0</weight-lb>
		    <max-lb type="double">24000.0</max-lb>
		    <min-lb type="double">0.0</min-lb>
		</weight>
		
    <weight n="3">
		    <name>Bradle Tank a 60850 lb</name>
		    <weight-lb type="double">0.0</weight-lb>
		    <max-lb type="double">182550.0</max-lb>
		    <min-lb type="double">0.0</min-lb>
		</weight>
    
    
    <rating>
      <FDM type="int">     4 </FDM>
      <systems type="int"> 4 </systems>
      <cockpit type="int"> 4 </cockpit>
      <model type="int">   5 </model>
    </rating>
   
   <systems>
          <autopilot>
	    <name>Autopilot</name>
               <path>Nasal/AN-22A-autopilot.xml</path>
         </autopilot>
   </systems>
   
   <import>
        <path>Huds/Sets/controls.xml</path>
        <x-offset>-100</x-offset>
        <y-offset>70</y-offset>
    </import>
   
  </sim>

</PropertyList>
