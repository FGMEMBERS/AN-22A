<PropertyList>

  <path>interior-08.ac</path>

  <animation>    
    <object-name>intvitres</object-name>
</animation>

<animation>
<type>noshadow</type>    
    <object-name>intvitres</object-name>
</animation>

<animation>
<type>shader</type>
<shader>chrome</shader>
    <texture>Aircraft/AN-22A/Models/glass_shader.png</texture>    
    <object-name>intvitres</object-name>
</animation>

<animation>
    <type>material</type>       
       <object-name>intvitres</object-name>      
  <emission>
    <factor-prop>sim/multiplay/generic/int[5]</factor-prop>
      <red>   0.015 </red>
      <green> 0.015 </green>
      <blue>  0.015 </blue>
    </emission>
</animation>
  
  <animation>    
    <object-name>intvitres</object-name>
</animation>

<animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>
  
  <!-- working for Rembrandt -->  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
  </effect>
 
 <animation>    
    <object-name>intvitres</object-name>
</animation>
  


  <!-- Planche de bord -->
  <model>
    <path>Aircraft/AN-22A/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -25.20 </x-m>
      <y-m>   0.0000 </y-m>
      <z-m>  -1.1478 </z-m>
    </offsets>
  </model>

</PropertyList>
